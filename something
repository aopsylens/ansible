# install nginx
ansible-galaxy install nginxinc.nginx

cat <<EOF > nginx.yaml
- hosts: nginx
  roles:
    - role: nginxinc.nginx
  become: yes
EOF

# install node exporter
ansible-galaxy install cloudalchemy.node-exporter

cat <<EOf > nexporter.yaml
- hosts: nexporter
  roles:
    - cloudalchemy.node-exporter
EOF
